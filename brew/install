#!/usr/bin/env bash

# bash "strict mode"
set -eu

# check if macOS is running

    if test "$(uname)" != "Darwin"; then
        message fail "OS must be macOS"
        exit 0
    fi


# Install apps

    message info "Installing apps, fonts & quicklook pluginsâ€¦"

    apps=(
        sourcetree
        sequel-pro
        virtualbox
        google-chrome
        firefox
        transmit
        rectangle
        spotify
        vlc
        transmission
        macdown
        dropbox
    )

    brew install --cask "${apps[@]}" --appdir=/Applications


# Install QuickLook plugins (https://github.com/sindresorhus/quick-look-plugins)

    ql=(
        qlcolorcode
        qlstephen
        qlmarkdown
        quicklook-json
        qlprettypatch
        quicklook-csv
        qlimagesize
        mdimagesizemdimporter
        webpquicklook
        quicklookase
        qlvideo
        quicklook-pat
    )

    brew install --cask "${ql[@]}"


# Install utilities

    utilities=(
        youtube-dl
        ffmpeg
        gifski
    )

    brew install ${utilities[@]}


# Install fonts

    fonts=(
      font-ibm-plex
    )
    brew install --cask ${fonts[@]}


# Sublime

    brew install --cask sublime-text --appdir=/Applications

    sublime-update-prefs
    sublime-icon
