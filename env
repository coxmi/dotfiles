#!/usr/bin/env bash

export DOTFILES="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Load shell env â€” source all ${folder}/{env,alias,functions,path,profile,prompt} files, excluding /bin

shopt -s extglob; # allows extended glob, e.g. !(bin)

for file in $DOTFILES/!(bin)/{env,alias,functions,path,profile,prompt}; do
    if [ -r "$file" ] && [ -x $file ]; then
        source $file
    fi
done

