#!/usr/bin/env bash


# make intermediate folders
alias mkdir='mkdir -p'


# coloured output for `ls`
alias ls='ls -G'


# apple show or hide files
alias showfiles='defaults write com.apple.finder AppleShowAllFiles YES; killall Finder'
alias hidefiles='defaults write com.apple.finder AppleShowAllFiles NO; killall Finder'


# apache
alias apacherestart='sudo apachectl restart'


# mysql
alias mysqlrestart='sudo /usr/local/mysql/support-files/mysql.server restart'


# delete trash
alias deletetrash='sudo rm -rf ~/.Trash/*'
alias emptytrash='deletetrash'


# URL-encode strings
function urlencode() {
  for a in "$@"; do
    echo $(php -r "echo urlencode('$a');")
  done
}

# print each PATH entry on a separate line
alias path='echo -e ${PATH//:/\\n}'


# editor
alias edit='subl'
alias e='edit'